<% include partials/header.ejs %>

<% include partials/nav.ejs %>

<div class="container">

    <form>
        <div class="input-field">
            <input name="todo" placeholder="Add Todo..." id="user_todo" type="text" class="validate" required>
            <label for="user_todo">Todo</label>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
        </button>
    </form>
    <ul class="collection with-header Todo-list">
        <li class="collection-header"><h4>My Todos</h4></li>
        <% for (let i = 0; i < myTodos.length; i++) { %>
        <a href="#" class="collection-item Todo-list__item"><%= myTodos[i].todo %></a>
        <% } %>
    </ul>

</div>

